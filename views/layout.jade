doctype html
html(ng-app="dashboard")
    head
        title Dashboard

        // CSS
        link(rel='stylesheet', href='/lib/bootstrap/dist/css/bootstrap.min.css')
        link(rel='stylesheet', href='/lib/nvd3/nv.d3.min.css')
        link(rel='stylesheet', href='/css/sandstone.min.css')
        link(rel='stylesheet', href='/css/style.css')

    body
        nav.navbar.navbar-default.navbar-static-top(role="navigation")
            div.container-fluid

                div.navbar-header
                    button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target=".navbar-collapse")
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(href="#")
                        span.glyphicon.glyphicon-dashboard
                        span &nbsp;Dashboard

                div.navbar-collapse.collapse
                    ul.nav.navbar-nav.navbar-right
                        li(ui-sref-active="active")
                            a(ui-sref="system") System
                        li(ui-sref-active="active")
                            a(ui-sref="fits") Model Fits
                        li(ui-sref-active="active")
                            a(ui-sref="results") Test Results

        block content

        // Helpers
        script(type='text/javascript', src='/lib/jquery/dist/jquery.min.js')
        script(type='text/javascript', src='/lib/lodash/dist/lodash.min.js')
        script(type='text/javascript', src='/lib/moment/min/moment.min.js')

        // Bootstrap
        script(type='text/javascript', src='/lib/bootstrap/dist/js/bootstrap.min.js')

        // Angular
        script(type='text/javascript', src='/lib/angular/angular.min.js')
        script(type='text/javascript', src='/lib/angular-resource/angular-resource.min.js')
        script(type='text/javascript', src='/lib/angular-ui-router/release/angular-ui-router.min.js')
        script(type='text/javascript', src='/lib/angular-bootstrap/ui-bootstrap-tpls.min.js')

        // Charts
        script(type='text/javascript', src='/lib/d3/d3.min.js')
        script(type='text/javascript', src='/lib/nvd3/nv.d3.js')
        script(type='text/javascript', src='/lib/angularjs-nvd3-directives/dist/angularjs-nvd3-directives.min.js')

        // App
        script(type='text/javascript', src='/js/main.js')
        script(type='text/javascript', src='/js/system.js')
        script(type='text/javascript', src='/js/modelfits.js')
        script(type='text/javascript', src='/js/testresults.js')
